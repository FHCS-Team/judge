# File system paths - use local directories for testing
JUDGEHOST_WORK_DIR=./data
JUDGEHOST_PROBLEMS_DIR=./data/problems
JUDGEHOST_SUBMISSIONS_DIR=./data/submissions
JUDGEHOST_RESULTS_DIR=./data/results
JUDGEHOST_LOGS_DIR=./data/logs

# Queue configuration
JUDGEHOST_MAX_QUEUE_SIZE=100
JUDGEHOST_MAX_WORKERS=3

# Resource limits
JUDGEHOST_MAX_MEMORY_MB=8192
JUDGEHOST_MAX_CPU_CORES=8.0

# API Server
API_PORT=3000
API_HOST=0.0.0.0

# DOMserver integration
DOMSERVER_ENABLED=false
DOMSERVER_URL=http://localhost:8080
DOMSERVER_API_VERSION=v4
DOMSERVER_USERNAME=judgehost
DOMSERVER_PASSWORD=your-password-here
JUDGEHOST_HOSTNAME=judgehost-dev
JUDGEHOST_PUBLIC_URL=http://localhost:3000
DOMSERVER_SUBMIT_RESULTS=true
DOMSERVER_SUBMIT_ON_COMPLETE=true

# DOMserver retry settings
DOMSERVER_RETRY_ENABLED=true
DOMSERVER_RETRY_MAX_ATTEMPTS=3
DOMSERVER_RETRY_DELAY_MS=1000
DOMSERVER_RETRY_BACKOFF_MULTIPLIER=2.0
DOMSERVER_TIMEOUT_MS=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
